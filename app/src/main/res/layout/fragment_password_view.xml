<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.devland.masterpassword.ui.InsertionAnimationCardListView
            android:id="@+id/cardList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/floating_action_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_float_add"
        fab:fab_colorNormal="@color/floating_button_normal"
        fab:fab_colorPressed="@color/floating_button_pressed" />

</FrameLayout>