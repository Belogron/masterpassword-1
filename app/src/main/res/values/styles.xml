<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="ShowcaseLightTheme" parent="ShowcaseView">
        <!--<item name="sv_backgroundColor">#5c000000</item>-->
        <!--<item name="sv_showcaseColor">#ffaaaaaa</item>-->
        <!--<item name="sv_tintButtonColor">false</item>-->
        <!--item name="sv_titleTextAppearance">@style/CustomTitle</item-->
    </style>


    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <!--<item name="android:textColor">#ff000000</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <!--<item name="android:textColor">#ff000000</item>-->
    </style>

    <color name="floating_button_normal">@color/accent</color>
    <color name="floating_button_pressed">@color/accent_dark</color>
    <color name="card_list_background_light">#e5e5e5</color>

    <color name="primary">#37474f</color>
    <color name="primary_light">#b0bec5</color>
    <color name="primary_dark">#263238</color>

    <color name="accent">#3d5afe</color>
    <color name="accent_light">#a6baff</color>
    <color name="accent_dark">#4d69ff</color>

    <color name="black">#000000</color>
    <color name="divider">#1e000000</color>
    <color name="text_hint">#42000000</color>
    <color name="text_secondary">#8a000000</color>
    <color name="icon">#8a000000</color>
    <color name="text">#de000000</color>

</resources>
